<% layout("/layouts/boilerplate") %>

<style>
    #filters{
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        gap: 2rem;
        align-items: center;
    }

    .filter{
        cursor: pointer;
        margin-top: 2rem;
        margin-bottom: 1rem;
        opacity: 0.7;
        text-align: center;
        transition: 0.45s ease;
        border-bottom: 3px solid rgba(0, 0, 0, 0);
    }
    .filter:hover{
        opacity: 1;
        border-bottom: 3px solid #dadada;
    }

    .filter div i{
        font-size: 1.20rem;
    }

    .filter p{
        font-weight: 500;
        font-size: 0.80rem;
    }

    .tax-toggle{
        align-self: center;
        border: 1px solid rgba(0, 0, 0, 0.241);
        border-radius: 10px;
        height: 3.25rem;
        padding: 1rem;
        font-size: 0.87rem;
        font-weight: 500;
        margin-left: 1.8rem;
    }
    .tax-toggle:hover{
        background-color: #dadada60;
        border: 1px solid rgb(0, 0, 0);
    }

    .tax-info{
        display: none;
    }
    
</style>

<body>
    

    <div class="page1">
        <div id="filters">
            <div class="filter">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Room</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-umbrella-beach"></i></div>
                <p>Beach</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-snowflake"></i></div>
                <p>Arctic</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-chess-rook"></i></div>
                <p>Castle</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-water-ladder"></i></div>
                <p>Amazing pools</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-wine-glass"></i></div>
                <p>Vineyard</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-sailboat"></i></div>
                <p>Boats</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mountain-sun"></i></div>
                <p>Mountains</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <p>Top cities</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mug-hot"></i></div>
                <p>Bed & Breakfasts</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-golf-ball-tee"></i></div>
                <p>Golfing</p>
            </div>
            <!-- <div class="filter">
                <div><i class="fa-solid fa-palette"></i></div>
                <p>Creative spaces</p>
            </div> -->
            <!-- <div class="filter">
                <div><i class="fa-solid fa-tower-observation"></i></div>
                <p>Towers</p>
            </div> -->

            <div class="tax-toggle">
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                    <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
                </div>
            </div>
            
        </div>

        <div class="listings">
            <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1" >

                <%for(data of listing){%>
                    <a href="/listings/<%=data._id%>" id="card-anchor">
                        <div class="card col listing-card">
                            <img src="<%=data.image.url%>" class="card-img-top" alt="listing_img" style="height: 20rem;">
                            <div class="card-img-overlay"></div>
                            <div class="card-body">
                                <p class="card-text">
                                <b><%=data.title%></b> <br>
                                <i class="fa-solid fa-indian-rupee-sign"></i> <%=data.price%>/night<i class="tax-info">&nbsp; &nbsp; +17%GST</i>
                                </p>
                                
                            </div>
                        </div>
                    </a>
                <%}%>

            </div>
        </div>
    </div>
</body>

<script>
    let taxSwitch = document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener('click',() => {
        let taxInfo = document.getElementsByClassName("tax-info");
        for(info of taxInfo){
            if(info.style.display != "inline"){
                info.style.display = "inline";
            }else{
                info.style.display = "none";
            }
        }
    })
</script>